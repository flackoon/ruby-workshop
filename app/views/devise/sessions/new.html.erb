<div class="row">
	<div class="col-sm-4 offset-sm-4 col-12">
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
		<h1>Login</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="card card-primary p-3">
				<div class="form-group">
					<%= f.label :email %>
          <%= f.input :email,
              required: false,
              autofocus: true,
              label: false,
              input_html: { autocomplete: "email", class: 'form-control' } %>
				</div>
				<div class="form-group">
					<%= f.label :password %>
          <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password", class: 'form-control' } %>
          <%= f.input :remember_me,
                :input_html => { :class => 'mt-4' },
                as: :boolean if devise_mapping.rememberable? %>
				</div>
			</div>
			<div class="actions text-right mt-3">
        <%= f.button :submit, "Log in",
              class: 'btn btn-outline-primary' %>

			</div>
		<% end %>
	</div>
</div>