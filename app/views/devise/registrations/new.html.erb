<div class="row">
	<div class="col-sm-4 offset-sm-4 col-12">
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
		<% if notice %>
			<p class="alert alert-success"><%= notice %></p>
		<% end %>
		
		<h3>Register</h3>
		<%#= form_with url: create_account_url, model: @account, local: true do |form| %>
		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<div class="card card-primary p-3">
				<div class="form-group">
					<%= f.label :email %>
					<%= f.email_field :email, 
                required: true,
                autofocus: true,
                input_html: { autofocus: 'email' },
                class: 'form-control' %>
					<%#= email_field :email, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :password %>
					<%= f.password_field :password,
                required: true,
                class: 'form-control',
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
					<%#= password_field :password, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :password_confirmation %>
					<%#= password_field :password_confirmation, class: 'form-control' %>
					<%= f.password_field :password_confirmation,
                required: true,
                class: 'form-control',
                input_html: { autocomplete: "new-password" } %>
				</div>
			</div>
			<div class="actions text-right mt-3">
				<%= f.submit 'Register', class: 'btn btn-outline-primary' %>
			</div>
		<% end %>
	</div>
</div>
