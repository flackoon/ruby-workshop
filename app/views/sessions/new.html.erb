<div class="row">
	<div class="col-sm-4 offset-sm-4 col-12">
		<p class='text-danger'><%= alert %></p>
		<h1>Login</h1>

		<%= form_tag login_post_url do |form| %>
			<div class="card card-primary p-3">
				<div class="form-group">
					<%= label_tag :email %>
					<%= text_field_tag :email, nil,  class: 'form-control' %>
					<div class='text-danger'><small><%#= @user.errors[:email].map{ |error| error.capitalize }.join('</br>') %></small></div>
				</div>
				<div class="form-group">
					<%= label_tag :password %>
					<%= password_field_tag :password, nil, class: 'form-control' %>
					<div class='text-danger'><small><%#= @user.errors[:passwor].map{ |error| error.capitalize }.join('</br>') %></small></div>
				</div>
			</div>
			<div class="actions text-right mt-3">
				<%= submit_tag 'Login', class: 'btn btn-outline-primary' %>
			</div>
		<% end %>
	</div>
</div>