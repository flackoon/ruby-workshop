<div class="account-index-container">
	<div class="info-container d-flex justify-content-end align-items-top mt-5">
		<div class="text-right  mr-3">
			<h4 class='mb-0'>
				<%= @account.email %>
			</h4>
		</div>
		<div class="profile-picture">
			<%= image_tag !@account.picture.nil? && !@account.picture.empty? ? @account.picture : 'avatar.png', alt: 'Profile picture' %>
		</div>
	</div>

	<div class="mt-3">
		<h3 class="mb-0">Participating in:</h3>
		<hr>
		<% if @account.workshops.length > 0 %>
			<% @account.workshops.each do |workshop| %>
				<%= render partial: 'workshops/workshop', locals: { workshop: workshop, no_actions: true } %>
			<% end %>
		<% else %>
			<span>Currently this user participates in no workshops...</span>
		<% end %>
	</div>
</div>
