<div class="text-right mt-4">
	<h2 class='mb-0'>My profile</h2>
	<div class="text-muted"><%= @user.email %></div>
</div>

<div class="mt-3">
	<h3 class="mb-0">Workshops I'm interested in</h3>
	<hr>
	<% if @user.workshops.length > 0 %>
		<% @user.workshops.each do |workshop| %>
			<%= render partial: 'workshops/workshop', locals: { workshop: workshop } %>
		<% end %>
	<% else %>
		<span>You showed interest for no workshops yet...</span>
	<% end %>
</div>
