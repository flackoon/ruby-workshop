<div class="account-index-container">
	<div class="d-flex justify-content-end align-items-top mt-5">
		<div class="text-right  mr-3">
			<h2 class='mb-0'>
				<a href=<%= edit_account_path %> class='btn btn-outline-primary edit-account-btn rounded-circle'>
					<i class="fas fa-pen"></i>
				</a>
				My profile
			</h2>
			<div class="text-muted"><%= @account.email %></div>
		</div>
		<div class="profile-picture">
			<%= image_tag !@account.picture.nil? ? @account.picture : 'avatar.png', alt: 'Profile picture' %>
		</div>
	</div>

	<div class="mt-3">
		<h3 class="mb-0">Workshops I'm interested in</h3>
		<hr>
		<% if @account.workshops.length > 0 %>
			<% @account.workshops.each do |workshop| %>
				<%= render partial: 'workshops/workshop', locals: { workshop: workshop } %>
			<% end %>
		<% else %>
			<span>You showed interest for no workshops yet...</span>
		<% end %>
	</div>
</div>
